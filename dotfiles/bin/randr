#!/bin/bash

disp_main="LVDS-1"
disp_hdmi="HDMI-1"
disp_vga="VGA-1"
disp_dp="DP-1"

case $1 in
    extern_only)
        xrandr \
            --output $disp_hdmi --auto --left-of $disp_main \
            --output $disp_main --off
        ;;
    restore)
        xrandr \
            --output $disp_hdmi --off \
            --output $disp_vga --off \
            --output $disp_dp --off \
            --output $disp_main --auto --primary
        ;;
    extend_left)
        xrandr \
            --output $disp_hdmi --auto --left-of $disp_main \
            --output $disp_main --auto
        ;;

esac
launch -q bspwm color
